generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  BLOGGER
}

model User {
  id Int @id @default(autoincrement())

  username String @unique
  password String

  role Role @default(USER)

  posts    Post[]
  comments Comment[]
}

model Comment {
  id Int @id @default(autoincrement())

  author   User? @relation(fields: [authorId], references: [id])
  authorId Int?

  parentPost   Post? @relation(fields: [parentPostId], references: [id])
  parentPostId Int?

  content  String
  uploaded DateTime
}

model Post {
  id Int @id @default(autoincrement())

  author   User? @relation(fields: [authorId], references: [id])
  authorId Int?

  title     String
  content   String
  published Boolean
  uploaded  DateTime

  comments Comment[]
}
